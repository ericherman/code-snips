#!/bin/bash

# http://www.gnu.org/prep/standards/standards.html#Formatting
GINDENT='indent -nbad -bap -nbc -bbo -bl -bli2 -bls -ncdb -nce -cp1 -cs -di2 -ndj -nfc1 -nfca -hnl -i2 -ip5 -lp -pcs -psl -nsc -nsob'

$GINDENT -T FILE \
 -T clock_t \
 -T clockid_t \
 -T comparison_fn_t \
 -T div_t \
 -T double_t \
 -T errno_t \
 -T error_t \
 -T fenv_t \
 -T fexcept_t \
 -T float_t \
 -T fpos64_t \
 -T fpos_t \
 -T imaxdiv_t \
 -T int16_t \
 -T int32_t \
 -T int64_t \
 -T int8_t \
 -T int_fast16_t \
 -T int_fast32_t \
 -T int_fast64_t \
 -T int_fast8_t \
 -T int_least16_t \
 -T int_least32_t \
 -T int_least64_t \
 -T int_least8_t \
 -T intmax_t \
 -T intptr_t \
 -T ldiv_t \
 -T lldiv_t \
 -T locale_t \
 -T mbstate_t \
 -T mcontext_t \
 -T off64_t \
 -T off_t \
 -T old_sigset_t \
 -T onexit_t \
 -T pid_t \
 -T ptrdiff_t \
 -T sig_atomic_t \
 -T sig_t \
 -T sighandler_t \
 -T siginfo_t \
 -T sigset_t \
 -T size_t \
 -T ssize_t \
 -T stack_t \
 -T suseconds_t \
 -T time_t \
 -T timer_t \
 -T ucontext_t \
 -T uid_t \
 -T uint16_t \
 -T uint32_t \
 -T uint64_t \
 -T uint8_t \
 -T uint_fast16_t \
 -T uint_fast32_t \
 -T uint_fast64_t \
 -T uint_fast8_t \
 -T uint_least16_t \
 -T uint_least32_t \
 -T uint_least64_t \
 -T uint_least8_t \
 -T uintmax_t \
 -T uintptr_t \
 -T wchar_t \
 -T wctrans_t \
 -T wctype_t \
 -T wint_t \
 "$@"
